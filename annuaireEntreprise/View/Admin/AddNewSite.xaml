<Window x:Class="annuaireEntreprise.View.Admin.AddNewSite"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:annuaireEntreprise.View.Admin"
        mc:Ignorable="d"
        Title="AddNewSite" Height="450" Width="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="7*"></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="Ajouter un nouveau Site"></TextBlock>
        <TextBox x:Name="InputSiteText" Grid.Row="2" Margin="20" Height="30" VerticalAlignment="Top"></TextBox>
        <Button  Grid.Row="2" Margin="70" Width="80" Height="30" Content="Valider" VerticalAlignment="Top" Click="Button_Click"></Button>
        <Button x:Name="ButtonLeave"  Grid.Row="2" Margin="120,120" Width="80" Height="30" Content="Quitter" VerticalAlignment="Top" Click="ButtonLeave_Click" ></Button>


    </Grid>
</Window>
