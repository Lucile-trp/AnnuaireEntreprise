<Window x:Class="annuaireEntreprise.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:annuaireEntreprise"
        mc:Ignorable="d"
        Title="Annuaire Entreprise" Height="800" Width="1400" KeyDown="Window_KeyDown">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.8*" />
            <RowDefinition Height="10*" />

        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Width="auto" Background="#FF0FA0F3">
            <TextBlock Text="Annuaire Entreprise" FontSize="30"  Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"></TextBlock>
            <Button  x:Name="ButtonDisconnect" Content="Déconnexion" Visibility="Hidden" HorizontalAlignment="Right" VerticalAlignment="Center" Click="ButtonDisconnect_Click" Margin="10" Background="#FFFF3939"></Button>
        </Grid>
        <Grid Grid.Row="1">
            <Frame x:Name="MainContent" NavigationUIVisibility="Hidden" Background="#FFD1CFCF"></Frame>
        </Grid>
        

    </Grid>
</Window>
