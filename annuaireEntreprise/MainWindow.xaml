<Window x:Class="annuaireEntreprise.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:annuaireEntreprise"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="1200" KeyDown="Window_KeyDown">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.8*" />
            <RowDefinition Height="10*" />

        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Width="auto">
            <Menu Width="auto">
                <MenuItem Margin="10" Height="20" Header="Annuaire" Click="ShowAnnuaire" Background="Black" Foreground="White"></MenuItem>
                <MenuItem Margin="10" Height="20" Header="FormAddEMp" Click="ShowFormEmployeAdd" Background="Black" Foreground="White"></MenuItem>
            </Menu>
        </Grid>
        <Grid Grid.Row="1">
            <Frame x:Name="MainContent" NavigationUIVisibility="Hidden" Background="#FF272727"></Frame>
        </Grid>
        

    </Grid>
</Window>
